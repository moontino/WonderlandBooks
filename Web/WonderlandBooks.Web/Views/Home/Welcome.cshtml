@model WonderlandBooks.Web.ViewModels.WelcomePage.AuthorsAndBooksPresentationListViewModel
@{
    this.ViewData["Title"] = "Welcome";
}

@for (int i = 0; i < Model.Authors.Count(); i += 3)
{

    <div class="card-deck">
        <div class="card">
            <img class="card-img-top" src="@Model.Authors[i].ImageUrl">
            <div class="card-body">
                <a class="card-title" asp-controller="Authors" asp-action="GetAuthor" asp-route-id="@Model.Authors[i].Id">@Model.Authors[i].Name</a>
                <p class="card-text"><small class="text-muted">Website: @Model.Authors[i].Website</small></p>
                <p class="card-text"><small class="text-muted">Books: @Model.Authors[i].Books</small></p>
            </div>
        </div>
        <div class="card">
            <img class="card-img-top" src="@Model.Authors[i+1].ImageUrl">
            <div class="card-body">
                <a class="card-title" asp-controller="Authors" asp-action="GetAuthor" asp-route-id="@Model.Authors[i+1].Id">@Model.Authors[i + 1].Name</a>
                <p class="card-text"><small class="text-muted">Website: @Model.Authors[i + 1].Website</small></p>
                <p class="card-text"><small class="text-muted">Books: @Model.Authors[i + 1].Books</small></p>
            </div>
        </div>
        <div class="card">
            <img class="card-img-top" src="@Model.Authors[i+2].ImageUrl">
            <div class="card-body">
                <a class="card-title" asp-controller="Authors" asp-action="GetAuthor" asp-route-id="@Model.Authors[i + 2].Id">@Model.Authors[i + 2].Name</a>
                <p class="card-text"><small class="text-muted">Website: @Model.Authors[i + 2].Website</small></p>
                <p class="card-text"><small class="text-muted">Books: @Model.Authors[i + 2].Books</small></p>
            </div>
        </div>
    </div>
}
<section class="carousel">
    <div class="reel">
        @foreach (var book in Model.Book)
        {
            <article>
                <a class="image featured"asp-controller="Book" asp-action="GetBook" asp-route-id="@book.Id"><img src="@book.ImageExtension" alt="" /></a>
                <header>
                    <h3><a href="#">@book.Name</a></h3>
                </header>
                <p>@book.EditionLanguageName</p>
            </article>
        }
    </div>
</section>
@section Scripts {
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.dropotron.min.js"></script>
    <script src="~/js/jquery.scrolly.min.js"></script>
    <script src="~/js/jquery.scrollex.min.js"></script>
    <script src="~/js/browser.min.js"></script>
    <script src="~/js/breakpoints.min.js"></script>
    <script src="~/js/util.js"></script>
    <script src="~/js/main.js"></script>
}