@model WonderlandBooks.Web.ViewModels.CreativeWriting.CreateStoryInputModel
@{
    this.ViewData["Title"] = "Create";
}
<form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Image"></label>
        <input type="file" class="form-control" style="border:0px solid white"  asp-for="Image" accept="image/png, image/gif, image/jpeg" />
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-select">
        <label asp-for="GenreId"></label>
        <select class="custom-select" asp-for="GenreId" asp-items="@ViewBag.Genres">
            <option value="0">Select</option>
        </select>
        <span asp-validation-for="GenreId" class="text-danger"></span>
    </div>
    <div class="form-select">
        <label asp-for="EditionLanguageId"></label>
        <select class="custom-select" asp-for="EditionLanguageId" asp-items="@ViewBag.Language">
            <option value="0">Select</option>
        </select>
        <span asp-validation-for="EditionLanguageId" class="text-danger"></span>
    </div>
    &nbsp;
    <div>
        <input type="submit" class="btn btn-outline-primary mr-2" value="submit" />

    </div>
</form>