@model WonderlandBooks.Web.ViewModels.CreativeWriting.CollectionOfStories

@{
    ViewData["Title"] = "AllStories";
}
<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-sm-start row">
        <div class="col-md-8">
            @foreach (var story in Model.Stories)
            {
                <div class="row p-2 bg-white border rounded">
                    <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src=@story.Image></div>
                    <div class="col-md-6 mt-1">
                        <h5>@story.Title</h5>
                        <div class="d-flex flex-row">

                        </div>

                        <p class="text-justify text-truncate para mb-0">@story.Description<br><br></p>
                    </div>
                    <div class="align-items-center align-content-center col-md-3 border-left mt-1">

                        <div class="col-xs-3 text-center">
                            <button type="button" class="list-group-item list-group-item-action btn-block">New Chapter</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>