@model WonderlandBooks.Web.ViewModels.Genres.GenreListViewModel
@{
    this.ViewData["Title"] = "Topics";
}
<a class="btn btn-block" asp-controller="Posts" asp-action="Create"><h1>Create new post</h1> </a>
<div class="row">
    @foreach (var genre in Model.Genres)
    {
    
        <div class="card w-25 text-center">
            <div class="card-body">
                <h3 class="card-title">@genre.Name</h3>
                <a class="btn btn-dark "asp-controller="Genres" asp-action="PostByName"asp-route-id="@genre.Id"> See more</a>
            </div>
        </div>   
    }
</div>